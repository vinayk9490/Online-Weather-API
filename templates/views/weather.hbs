</head>
<body>
   {{>navbar}}

   <!--main header-->
   <div class="container-fluid main_header">
    <div class="row">
        <div class="col-md-10 col-12 mx-auto">
            <div class="main_content">
                <form class="temp_info">
                    <input type="text" id="cityName" placeholder="Enter     your     city    Name" autocomplete="off">
                    <input type="submit" value="search" id="submitBtn">
                </form>
            </div>
            <div class="tempInformation">
                <div class="top_layer">
                    <p id="todays_day">Monday</p>
                    <p id="todays_date">13 jul 2021</p>
                </div>
                <div class="main_layer">
                    <p id="city_name">Get output Here</p>
                    <div class="middle_layer data_hide">
                        <p id="temp"><span>0</span><sup>o</sup>C</p>
                        <p id="temp_status"><i class="fas fa-sun" style="color: #eccc68" aria-hidden="true"></i></p>
                    </div>
                </div>
            </div>
        </div>
    </div>
   </div>

   <!--footer-->
   {{>footer}}

   <script src="js/main.js"></script>
   <script>
       getCurrentDay=()=>{
           let weekday=new Array(7);
           weekday[0]="Sunday";
           weekday[1]="Monday";
           weekday[2]="Tuesday";
           weekday[3]="Wednesday";
           weekday[4]="Thursday";
           weekday[5]="Friday";
           weekday[6]="Saturday";

           let currentTime=new Date();
           let day=weekday[currentTime.getDay()];
           const todays_day=document.getElementById('todays_day');
           todays_day.innerText=day;
       };
       getCurrentDay();

       const getCurrentTime=()=>{
            var months=[
                "jan",
                "feb",
                "mar",
                "apr",
                "may",
                "jun",
                "jul",
                "aug",
                "sep",
                "oct",
                "nov",
                "dec",
            ];
            var now=new Date();
            var month=months[now.getMonth()];
            var date=now.getDate();

            var hours=now.getHours();
            var mins=now.getMinutes();

            var period="AM";
            if(hours>11)
            {
                periods="PM";
                if(hours>12) hours=hours-12;
            }
            if(mins<10)
            {
                mins="0"+mins;
            }
            return `${month} ${date} | ${hours}:${mins}${periods}`;
        };
        const todays_date=document.getElementById('todays_date');
        todays_date.innerHTML=getCurrentTime();


   </script>
</body>
</html>